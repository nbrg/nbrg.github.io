<% against = data.leagues[bout.against] %>
<div class="bout">
  <h1><%= bout.nickname %></h1>
  
  <section class="meta">
    <p><%= date_tag(bout.datetime) %></p>
    <% if bout.tournament %>
      <p><a href="/tournaments/<%= data.tournaments[bout.tournament].slug %>">
        <%= data.tournaments[bout.tournament].name %></a>
      </p>
    <% end %>
  </section>

  <section class="scoreboard">
    <div class="team <%= bout.won ? bout.won == 'us' ? 'winner' : 'loser' : '' %>">
      <img src="/images/leagues/nbrg.png" />
      <span>NBRG</span>
      <% if bout.score %>
        <p><strong>Score:</strong> <%= bout.score.us %></p>
      <% end %>
    </div>
    
    <% if !bout.score %>
      <div class="when">
        <%= time_tag(bout.datetime) %>
      </div>
    <% end %>
    
    <div class="team <%= bout.won ? bout.won == 'them' ? 'winner' : 'loser' : '' %>">
      <% if bout.score %>
        <p><strong>Score:</strong> <%= bout.score.them %></p>
      <% end %>
      <span><%= against.nickname %></span>
      <img src="/images/leagues/<%= against.nickname.downcase %>.png" />
    </div>
  </section>
</div>
